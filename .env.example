# ==============================
# .env.example
# ==============================
# Copy this to .env and configure

# ══════════════════════════════
# SERVER SETTINGS
# ══════════════════════════════
HOST=127.0.0.1
PORT=8000
DEBUG=False

# ══════════════════════════════
# WHISPER SETTINGS
# ══════════════════════════════
WHISPER_MODEL=openai/whisper-large-v3
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=float32

# For GPU (if available):
# WHISPER_DEVICE=cuda
# WHISPER_COMPUTE_TYPE=float16

# For lower memory usage:
# WHISPER_MODEL=openai/whisper-small
# WHISPER_COMPUTE_TYPE=int8

# ══════════════════════════════
# SPEAKER DIARIZATION
# ══════════════════════════════
ENABLE_DIARIZATION=True
MIN_SPEAKERS=1
MAX_SPEAKERS=10
DIARIZATION_MODEL=pyannote/speaker-diarization-3.1

# ══════════════════════════════
# TRANSLATION SETTINGS
# ══════════════════════════════
PRIMARY_TRANSLATOR=google
FALLBACK_TRANSLATOR=deep-translator
AUTO_TRANSLATE=True
TARGET_LANGUAGE=en

# Optional API Keys (for premium services)
DEEPL_API_KEY=
GOOGLE_TRANSLATE_API_KEY=

# ══════════════════════════════
# AUDIO ENHANCEMENT
# ══════════════════════════════
ENABLE_NOISE_REDUCTION=True
ENABLE_VAD=True
NORMALIZE_AUDIO=True

# ══════════════════════════════
# AUDIO PROCESSING
# ══════════════════════════════
SAMPLE_RATE=16000
MAX_DURATION=600.0
MIN_DURATION=0.3
MAX_FILE_SIZE_MB=200
CHUNK_DURATION=30.0

# ══════════════════════════════
# PERFORMANCE
# ══════════════════════════════
MAX_WORKERS=4
ENABLE_CACHING=True
CACHE_TTL=3600

# ══════════════════════════════
# PATHS
# ══════════════════════════════
FFMPEG_PATH=/usr/bin
DATA_DIR=data
CACHE_DIR=cache
LEARNING_FILE=learned_data.json
MAX_HISTORY_SIZE=1000
